<GetRecords xmlns="http://www.opengis.net/cat/csw/2.0.2" service="CSW" resultType="results" outputFormat="application/xml" outputSchema="http://www.isotc211.org/2005/gmd" startPosition="1" maxRecords="10">
    <Query typeNames="gmd:MD_Metadata">
        <Constraint version="1.1.0">
            <ogc:Filter xmlns:ogc="http://www.opengis.net/ogc">
                <ogc:And>
                    <ogc:PropertyIsEqualTo>
                        <ogc:PropertyName>apiso:type</ogc:PropertyName>
                        <ogc:Literal>datasetCollection</ogc:Literal>
                    </ogc:PropertyIsEqualTo>
                </ogc:And>
            </ogc:Filter>
        </Constraint>
        <ElementSetName typeNames="gmd:MD_Metadata">full</ElementSetName>
    </Query>
</GetRecords>